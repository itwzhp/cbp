{
    "preset": "laravel",
    "rules": {
        "single_blank_line_before_namespace": false,
        "no_blank_lines_before_namespace": true,
        "blank_line_after_opening_tag": false,
        "binary_operator_spaces": {
            "operators": {
                "=>": "align"
            }
        },
        "cast_spaces": {
            "space": "none"
        },
        "concat_space": {
            "spacing": "one"
        },
        "not_operator_with_successor_space": false,
        "class_attributes_separation": {
            "elements": {
                "const": "none",
                "method": "one",
                "property": "one",
                "trait_import": "none",
                "case": "none"
            }
        },
        "phpdoc_align": {
            "align": "vertical",
            "tags": [
                "method",
                "param",
                "property",
                "property-read",
                "property-write",
                "return",
                "throws",
                "type",
                "var"
            ]
        },
        "no_extra_blank_lines": {
            "tokens": [
                "extra", "square_brace_block", "return"
            ]
        }
    }
}
